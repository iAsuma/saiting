.layer{
  display: none;
  position: fixed;
  z-index: 9;
  background: rgba(0, 0, 0, 0.5);
  width:100%;
  height:100%;
  left:0;
  top:0;
}
.choose-box{
  display: none;
  position: fixed;
  bottom:0;
  left:0;
  width:100%;
  background:#fff;
  height:440rpx;
  z-index: 10;
}
.choose-detail{
  border-top:1rpx solid #f2f2f2;
  height:400rpx;
}
.choose-detail view{
  float:left;
  width:12.5%;
  border:1rpx solid #f2f2f2;
  box-sizing: border-box;
  text-align: center;
  border-right:0;
  border-top: 0;
  height:90rpx;
  line-height:90rpx;
  font-size: 26rpx;
}
.choose-detail view.active{
  background:#E83539;
  color:#fff;
}
.choose-detail view:last-child{
  border-right:1rpx solid #eee;
}
.choose-btn{
  padding:15rpx 25rpx;
  width:50%;
  box-sizing: border-box;
  display: inline-block;
}
.text-left{
  text-align: left;
  color:#999;
}
.text-right{
  text-align: right;
  color:#E83539;
}