/* pages/index/licence/licence.wxss */
.btn-red{
  border:0;
  color:#fff;
  background:#E83539;
  font-size: 30rpx;
  line-height:100rpx;
  height:100rpx;
  margin-top:40rpx;
  float:left;
  width:100%;
}
.content{
  padding:30rpx;
  background: #fff;
  box-sizing: border-box;
  height:100%;
}
.carNum{
  border-bottom:1rpx solid #eee;
  display: block;
  width:100%;
  padding:30rpx 0;
  float:left;
}
.carNum text{
  float:left;
}
.carPicker{
  float:left;
  margin-left:100rpx;
  background:#CCE4CA;
  width:100rpx;
  height:60rpx;
  line-height:60rpx;
  text-align: center;
  border-radius: 5rpx;
}
.carNum input{
  float:right;
  background:#E0F8DE;
  border-radius: 5rpx;
  width:calc(100% - 320rpx);
   height:60rpx;
  line-height:60rpx;
  padding-left:20rpx;
  box-sizing: border-box;
}
.licence-img{
  border:1rpx solid #eee;
  float:left;
  width:100%;
  margin-top:30rpx;
  border-radius: 10rpx;
  text-align: center;
  padding-bottom:30rpx;
}
.h1{
  display: block;
  font-family: SimHei;
}
.h4{
  color:#999;
  font-size: 26rpx;
}
.img-box{
  padding:30rpx;
  box-sizing: border-box;
}
.img-box image{
  width:100%;
}
.layer{
  display: none;
  position: fixed;
  z-index: 9;
  background: rgba(0, 0, 0, 0.5);
  width:100%;
  height:100%;
  left:0;
  top:0;
}
.choose-box{
  display: none;
  position: fixed;
  bottom:0;
  left:0;
  width:100%;
  background:#fff;
  height:492rpx;
  z-index: 10;
}
.choose-detail{
  border-top:1rpx solid #eee;
  height:400rpx;
}
.choose-detail view{
  float:left;
  width:12.5%;
  border:1rpx solid #eee;
  box-sizing: border-box;
  text-align: center;
  border-right:0;
  border-top: 0;
  height:80rpx;
  line-height:80rpx;
  font-size: 28rpx;
}
.choose-detail view.active{
  background:#E83539;
  color:#fff;
}
.choose-detail view:last-child{
  border-right:1rpx solid #eee;
}
.choose-btn{
  padding:20rpx;
  width:50%;
  box-sizing: border-box;
  display: inline-block;
}
.text-left{
  text-align: left;
  color:#999;
}
.text-right{
  text-align: right;
  color:#E83539;
}