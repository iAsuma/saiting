.content{
  width:100%;
  height:100%;
}
map{
  width: 100%;
  height:60%;
}
.input-box{
  background:#fff;
  padding:20rpx;
  position: relative;
}
.input-box input{
  background: #E9ECF5;
  color:#999;
  font-size: 28rpx;
  border-radius: 10rpx;
  padding: 0 20rpx;
  height:80rpx;
  line-height:80rpx;
  padding-left:80rpx;
}
.phcolor{
  color:#BDBDBD;
}
.search-btn{
  width:80rpx;
  height:80rpx;
  position: absolute;
  left:20rpx;
  top:20rpx;
  z-index: 3;
}
.search-btn image{
  width:30rpx;
  height:30rpx;
  margin:25rpx;
}
.ul-list{
  height:30%;
  padding:20rpx 0;
  box-sizing: border-box;
  background: #fff;
}
.li-list{
  padding:40rpx 20rpx;
  border-bottom:1rpx solid #eee;
  float:left;
  width:100%;
  box-sizing: border-box;
}
.li-list-detail{
  float:left;
  width:calc(100% - 70rpx);
}
.li-list image{
  float:left;
  width:50rpx;
  height:50rpx;
  margin:20rpx 20rpx 0 0;
}
.li-list .h1{
  font-size: 32rpx;
  float:left;
  width:60%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.li-list .h2{
  color:#999;
  font-size: 28rpx;
  float:right;
}
.li-list .red{
  color:#E73639;
}
.li-list .h3{
  width:100%;
  float:left;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 28rpx;
  color:#999;
}