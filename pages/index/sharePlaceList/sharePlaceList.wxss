/* pages/index/carList/carList.wxss */
.search{
  padding:20rpx;
  position: relative;
}
.search input{
  background: #fff;
  border-radius: 10rpx;
  height:70rpx;
  padding:0 80rpx;
  font-size: 28rpx;
}
.search-img{
  position: absolute;
  top:35rpx;
  left:40rpx;
  width:40rpx;
  height:40rpx;
  z-index: 5;
}
.search-img image{
  display: block;
  width:100%;
  height:100%;
}
.status{
  background:#fff;
}
.status-top{
  height:60rpx;
  line-height:60rpx;
  border-bottom:1rpx solid #eee;
}
.status-top view{
  float:left;
  width:calc(50% - 30rpx);
  text-align: center;
}
.status-top view picker{
  width:40%;
  float:left;
  color:#999;
  font-size: 26rpx;
  text-align: center
}
.status-top view picker.p60{
  width:60%;
}
.status-top image{
  width:60rpx;
  height:30rpx;
  float:left;
  margin-top:15rpx;
}
.status-foot{
  height:60rpx;
  line-height:60rpx;
}
.status-foot view{
  width:33.33%;
  float:left;
  text-align: center;
  font-size: 28rpx;
}
.status-foot view.active view{
  color:#E8373A;
}
.status-foot view view{
  display: inline-block;
  height:100%;
  width:55%;
  text-align: right;
  color:#999;
  margin:0 auto;
}
.status-foot view image{
  width:25rpx;
  height:25rpx;
  margin-left:-50rpx;
}
.car-list{
  padding:20rpx;

}
.car-list navigator{
  background:#fff;
  display: block;
  width:100%;
  border-radius: 10rpx;
  margin-bottom:20rpx;
  padding:20rpx;
  box-sizing: border-box;
  float:left;
}
.item image{
  width:160rpx;
  height:160rpx;
  border-radius: 10rpx;
  float:left;
  margin-bottom:20rpx;
}
.item-middle{
  width:calc(100% - 300rpx);
  margin-left:20rpx;
  float:left;
}
.h1{
  font-size: 32rpx;
  font-family: simHei;
}
.h4{
  font-size: 24rpx;
  color:#999;
  margin-bottom: 10rpx;
}
.nowrap{
  display: inline-block;
  width:100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-right{
  float:right;
  text-align: center;
}
.price image{
  width:30rpx;
  height:30rpx;
  float:left;
  margin-top:10rpx;
}
.price{
  color:#E8373A;
  font-size: 32rpx;
  margin:30rpx 0 65rpx 0;
}
.dis{
  color:#999;
  font-size:26rpx;
}
.dis image{
  width:30rpx;
  height:30rpx;
  float:left;
  margin-top:5rpx;
}
.star{
  width:50%;
  float:left;
  font-size: 25rpx;
  color:#ff9900;
}
.star image{
  width:120rpx;
  height:20rpx;
  float:left;
  margin-top:10rpx;
  margin-right: 5rpx;
}
.count{
  width:50%;
  float:left;
  font-size: 26rpx;
  color:#999;
  text-align: center
}
.item-foot{
  width:100%;
  float:left;
  border-top:1rpx solid #eee;
  padding-top:20rpx;
}
.item-foot text{
  display: inline-block;
  background:#EBEEF7;
  font-size: 28rpx;
  padding:0 20rpx;
  border-radius: 30rpx;
  margin-right:20rpx;
}