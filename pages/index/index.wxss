page{
  background:#fff;
}
.index{
  height:100%;
}
.banner{
  width:100%;
  height:30%;
}
.banner image{
  display: block;
  width:100%;
  height:100%;
}
.home-list{
  padding:20rpx 0;
  float:left;
  width:100%;
  border-bottom:15rpx solid #FAFAFA;
}
.home-list .list-3{
  width:33%;
  float:left;
}
.list-3 view{
  width:100rpx;
  height: 100rpx;
  border-radius: 50%;
  background:#FF464A;
  margin:0 auto;
  padding-top:25rpx;
  box-sizing: border-box;
	box-shadow: 0 15rpx 20rpx #FF7C7E;
}
.list-3 label{
  display:block;
  width:100%;
  text-align: center;
  margin-top:20rpx;
  font-size: 28rpx;
}
.list-3-img{
  width:50rpx;
  height: 50rpx;
  display: block;
  margin:0 auto;
}
.map-content{
  width:100%;
  padding:20rpx;
  height:200rpx;
  float:left;
  box-sizing: border-box;
}
.map-content-title{
  margin-bottom:20rpx;
}
.map-content-title text{
  display: block;
  width:100%;
  font-family: SimHei;
  margin:10rpx 0;
  font-size: 30rpx;
}
.map-content-title image{
  float:left;
  width:30rpx;
  height:30rpx;
  margin-top:12rpx;
}
.map-content-title label{
  color:#999;
  font-size: 28rpx;
}

.total-maker{
  text-align: center;
  border-bottom:1rpx solid #eee;
  font-size: 28rpx;
  padding:10rpx 0; 
  position: relative
}
.total-maker text{
  color:#FF464A;
}
.total-maker view{
  border:1rpx solid #FF464A;
  width:40rpx;
  position: absolute;
  bottom:0;
  left:50%;
  margin-left:-20rpx;
}
.list-detail{
  position: relative;
  border-bottom: 1rpx solid #eee;
}
.list-detail-top{
  font-family: SimHei;
  color:#000;
  font-size: 32rpx;
  padding:20rpx 0; 
}
.list-detail-top text{
  color:#E83539;
  float:right;
  font-family: SimHei;
}
.list-detail-top image{
  float:right;
  width:30rpx;
  height:30rpx;
  margin-top:10rpx;
}
.btn-yy{
  position: absolute;
  right:0;
  top:100rpx;
  border:0;
  color:#fff;
  background:#E83539;
  font-size: 28rpx;
  line-height:60rpx;
  height:60rpx;
}
.btn-yy-outline{
  position: absolute;
  right:0;
  top:100rpx;
  color:#E83539;
  background:none;
  border: 1rpx solid #E83538;
  font-size: 28rpx;
  line-height:60rpx;
  height:60rpx;
}
.list-detail{
  border-bottom:10rpx solid #F8F8F8;
}
.list-detail-btm{
  border-bottom: 1rpx solid #eee;
}
.list-detail-btm .adr image{
  float:left;
  width:30rpx;
  height:30rpx;
  margin-top:6rpx;
}
.list-detail-btm .adr{
  width:70%;
  display: block;
  font-size: 26rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-bottom:20rpx;
  color:#999;
}
.list-detail-btm .time{
  margin-bottom:20rpx;
  font-size: 26rpx;
  float:left;
  color:#999;
}
.list-detail-btm .time image{
  float:left;
  width:28rpx;
  height:28rpx;
  margin-top:6rpx;
  margin-right: 10rpx;
}
.clear{
  clear:both;
}
.list-detail-btm .line{
  border-right:1rpx solid #ccc;
  margin:10rpx 20rpx;
  float:left;
  height:18rpx;
}
.btn-none{
  color:#E83538;
  font-size: 28rpx;
  text-align: center;
  margin:20rpx 0;
}
.list-title{
  margin-top:20rpx;
  display: block;
  font-size: 32rpx;
  font-weight: bold;
}