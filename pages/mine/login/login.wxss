.container{
  width:100%;
}
form{
	display: block;
	width:100%;
	padding:40rpx;
	box-sizing: border-box;
}
.res-title{
	width:100%;
	height:200rpx;
	padding-top:80rpx;
}
.res-title .title1{
	font-size: 50rpx;
	color:#000;
	float:left;
	font-family: SimHei;
}
.res-title .title2{
	font-size: 40rpx;
	color:#000;
	float:left;
	margin:5rpx 30rpx;
}
.title3{
	font-size: 32rpx;
	color:#F24040;
  text-align: center;
  margin:40rpx 0;
}
.res-label{
	width:100%;
	height:100rpx;
	margin-bottom:50rpx;
	box-sizing: border-box;
}
.res-label image{
	width:50rpx;
	height:60rpx;
	float:left;
	margin-top:24rpx;
	margin-right:20rpx;
}
.res-phone{
	display: block;
	height:100rpx;
	border-bottom:2rpx solid #eee;
}
.res-code-label{
	width:30%;
	float:right;
}
.res-code{
	display: block;
	padding:0;
  width:50%;
	height:100rpx;
	float:left;
	border-bottom:2rpx solid #eee;
}
.res-code-label button{
	height:60rpx;
	font-size:30rpx;
	line-height:64rpx;
	border-radius: 50rpx;
}
button[type=primary]{
	background:#FF171B;border:0;
  font-size: 24rpx;
}
button:hover[type=primary]{
	background:#FF171B;border:0;
  
}
.res-submit{
	margin:0 auto;
	margin-top:60rpx;
	width:calc(100% - 50rpx);
  display:block;
}
.res-submit button{
	height:90rpx;
	line-height:90rpx;
	border-radius: 10rpx;
	border:0;
  font-size: 32rpx;
}
.page-body image{
  display: block;
  width:400rpx;
  height:244rpx;
  margin:0 auto;
}
.mes{
  color:#999;
  font-size: 28rpx;
  text-align: center;
  margin-top:60rpx;
}
.xieyi{
  color:#999;
  font-size: 28rpx;
  text-align: center;
  width:100%;
}
.xieyi navigator{
  display: inline-block;
  color:#E73538;
}
.xieyi{
  position: fixed;
  bottom:20rpx;
  left:0;
}

.layer-box button::after{
  border: 0;
}
.layer{
  background:rgba(0, 0, 0,0.5);
  position:fixed;
  top:0;
  left:0;
  z-index:998;
  width:100%;
  height:100%;
  display:block;
}
.layer-box{
  position: fixed;
  top:48%;
  left:48%;
  width:500rpx;
  height:230rpx;
  z-index: 999;
  background:#F8F8F8;
  margin-top:-135rpx;
  margin-left:-250rpx;
  border-radius: 10rpx;
  padding:20rpx;
}
.layer-box .left{
  border:0;
  font-size: 28rpx;
  float:right;
  color:#666;
}
.layer-box .right{
  border:0;
  font-size: 28rpx;
  color:#FF464A;
  float:right;
}
.layer-box text{
  display: block;
  width:100%;
  margin:40rpx 20rpx;
  font-size: 34rpx;
  color:#000;
}
.active{
  display: block;
}