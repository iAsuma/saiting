page{
	background:#fff;
}
form{
	display: block;
	width:100%;
	padding:40rpx;
	box-sizing: border-box;
}
.res-title{
	width:100%;
	height:200rpx;
	padding-top:80rpx;
}
.res-title .title1{
	font-size: 50rpx;
	color:#000;
	float:left;
	font-family: SimHei;
}
.res-title .title2{
	font-size: 40rpx;
	color:#000;
	float:left;
	margin:5rpx 30rpx;
}
.res-title .title3{
	font-size: 40rpx;
	color:#000;
	float:left;
	margin:8rpx 0;
}
.res-label{
	width:100%;
	height:100rpx;
	margin-bottom:50rpx;
	box-sizing: border-box;
}
.res-label image{
	width:50rpx;
	height:60rpx;
	float:left;
	margin-top:24rpx;
	margin-right:20rpx;
}
.res-phone{
	display: block;
	height:100rpx;
	border-bottom:2rpx solid #eee;
}
.res-code-label{
	width:30%;
	float:right;
}
.res-code{
	display: block;
	padding:0;
  width:50%;
	height:100rpx;
	float:left;
	border-bottom:2rpx solid #eee;
}
.res-code-label button{
	height:60rpx;
	font-size:30rpx;
	line-height:64rpx;
	border-radius: 50rpx;
}
button[type=primary]{
	background:#FF171B;border:0;
  font-size: 24rpx;
}
button:hover[type=primary]{
	background:#FF171B;border:0;
  
}
.res-submit{
	margin:0 auto;
	margin-top:120rpx;
	width:calc(100% - 50rpx);
  display:block;
}
.res-submit button{
	height:90rpx;
	line-height:90rpx;
	border-radius: 50rpx;
	border:0;
	font-size: 40rpx;
	box-shadow: 0 15rpx 20rpx #FF7C7E;
}