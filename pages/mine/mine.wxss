/* pages/index/center/center.wxss */
.head image{
  width:200rpx;
  height:200rpx;
  display: block;
  margin:40rpx auto;
  border-radius: 50%;
  border:6rpx solid #FF5658;
}
.h1::after{
  border: 0;
}
.item image{
  float:left;
  width:45rpx;
  height:45rpx;
  margin-right:20rpx;
}
.head .h1{
  font-size: 50rpx;
  text-align: center;
  height:80rpx;
  line-height:80rpx;
  margin:0;
}
.head .h1:active,.head .h1:hover:focus{
  background: none;
}
.h5{
  font-size: 30rpx;
  text-align: center;
  color:#666;
  margin-bottom:20rpx;
}
.item{
  border-bottom:1rpx solid #eee;
  padding:30rpx 80rpx;
  color:#5B5B5B;
  font-size: 30rpx;
}
.point{
  width:10rpx;
  height: 10rpx;
  border-radius: 50%;
  background:#5B5B5B;
  float:right;
  margin-top:20rpx;
}